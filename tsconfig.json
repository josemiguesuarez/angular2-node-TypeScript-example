{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts",
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules"
    ]
}
